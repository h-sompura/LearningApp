<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearningApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- So that now if we drag a button in Design view it will automatically apply our custom styling   -->
        <item name="materialButtonStyle">@style/myCustomButton</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
    </style>
    <!-- Our custom login button -->
    <style name="myCustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="fontFamily">@font/source_sans_pro_black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:paddingLeft">48dp</item>
        <item name="android:paddingRight">48dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="textAllCaps">true</item>
    </style>

    <!-- Custom EditTextView  -->
    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/custom_et</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">45dip</item>
        <item name="android:paddingLeft">22dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>
</resources>