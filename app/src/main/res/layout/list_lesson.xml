<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/appHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/source_sans_pro_semibold"
        android:text="@string/app_heading"
        android:textSize="24sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchSequentialProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appHeading"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="84dp"
        android:text="@string/force_sequential_progression" />

    <ListView
        android:id="@+id/listViewLessonList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/logoutButton"
        android:layout_below="@id/switchSequentialProgress"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="-5dp">

    </ListView>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="44dp"
        android:text="@string/logout" />

</RelativeLayout>